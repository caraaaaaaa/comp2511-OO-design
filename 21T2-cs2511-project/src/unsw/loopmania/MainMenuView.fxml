<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<VBox alignment="CENTER" prefHeight="382.0" prefWidth="254.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="116.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/IMG_0785.jpg" />
         </image>
      </ImageView>
      <!-- clicking button should start/resume the game -->
      <Button fx:id="startGameButton" onAction="#switchToGame" prefHeight="50.0" prefWidth="166.0" style="-fx-background-color: gray;" text="Standard mode" />
      <Button mnemonicParsing="false" onAction="#switchToGame" prefHeight="49.0" prefWidth="165.0" style="-fx-background-color: #6e43bf;" text="Survival mode" textFill="WHITE" />
      <Button mnemonicParsing="false" onAction="#switchToGame" prefHeight="50.0" prefWidth="166.0" style="-fx-background-color: #364fab;" text="Berserker mode" textFill="WHITE" />
      <Button mnemonicParsing="false" onAction="#switchToGame" prefHeight="50.0" prefWidth="165.0" style="-fx-background-color: #2da46b;" text="Confusing mode" textFill="WHITE" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
